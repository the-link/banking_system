#include<stdio.h> 
  
//functions  
void AddAccount(char temp_name[], char temp_surname[], char temp_age[]);
void Options(int option);

//global variabes : cross-function use
char name[];
char surname[];
char age[];
int SelectedOption = 0;

int main() 
{    
    //Declare and initialize local variables
    //
    //
    
   MainMenue: // goto used to return to top

        
        
    //Welcome screen
    printf("************************************ \n");
    printf("Welcome to my sample banking system \n");
    printf("************************************ \n");
    
    //Prompt user to select input
    printf("Please select an option: \n");
    
    //Options
    printf("1. Create new account. (1) \n");
    printf("2. Delete account. (2) \n");
    printf("3. View all accounts. (3) \n");
    printf("************************************ \n");
    scanf("%d", &SelectedOption);
    
    Options(SelectedOption);
        goto MainMenue;
    
    return 0; 
} 

//Declare functions

void Options(int option)
{

    //Option selection and eroor handling
    while (SelectedOption != 1 && SelectedOption != 2 && SelectedOption != 3)
    {
        printf("Please select a valid option! \n");
        scanf("%d", &SelectedOption);
    }
    
    //calling appropriate functions
    if (option == 1)
    {
        printf("Create new account:  \n");
        printf("************************************ \n");
        AddAccount(name, surname, age);
    }
    else if (option == 2)
    {
        printf("Delete account:  \n");
    }
    else
    {
        printf("View all accounts:  \n");
    }   
}

void AddAccount(char temp_name[], char temp_surname[], char temp_age[])         
// function definition   
{

    printf("Please enter first name: \n" );
    scanf("%s", &temp_name);
    
    printf("Please enter surname: \n" );
    scanf("%s", &temp_surname);
    
    printf("Please enter age: \n" );
    scanf("%d", &temp_age);

    printf("Please be patient as we return to the main menu. \n" );
    sleep(5);

}
